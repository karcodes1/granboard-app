rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Player stats - users can only read/write their own stats
    match /playerStats/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User profiles - users can read/write their own profile
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Active games - server manages these, users can read if they're participants
    match /activeGames/{gameId} {
      allow read: if request.auth != null && 
        request.auth.uid in resource.data.connectedUserIds;
      // Only server (admin SDK) can write
    }
    
    // Allow server (admin) to write any document
    match /{document=**} {
      allow write: if request.auth.token.admin == true;
    }
  }
}
